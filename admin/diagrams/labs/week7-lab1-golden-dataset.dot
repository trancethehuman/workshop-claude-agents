digraph GoldenDataset {
    rankdir=TB;
    newrank=true;
    splines=ortho;
    nodesep=0.8;
    ranksep=0.6;
    bgcolor="white";
    compound=true;
    node [fontname="Arial", fontsize=11, style="rounded,filled"];
    edge [fontname="Arial", fontsize=9];

    // Title
    label="Golden Dataset Architecture";
    labelloc="t";
    fontsize=14;
    fontname="Arial Bold";

    // Main container
    subgraph cluster_dataset {
        label="Golden Dataset Architecture";
        style="rounded,filled";
        fillcolor="#F5F3FF";
        color="#7C3AED";
        fontname="Arial Bold";
        fontsize=12;

        // Golden Dataset container
        subgraph cluster_tests {
            label="Golden Dataset";
            style="rounded,filled";
            fillcolor="#E0E7FF";
            color="#6366F1";
            fontname="Arial Bold";
            fontsize=11;

            node [shape=box fillcolor="#EFF6FF" color="#2563EB"];
            {rank=same; test1; test2; test3; test4}

            test1 [label="Test 1\nInput\nExpect\nCriteria"];
            test2 [label="Test 2\nInput\nExpect\nCriteria"];
            test3 [label="Test 3\nInput\nExpect\nCriteria"];
            test4 [label="Test 4\nInput\nExpect\nCriteria"];
        }

        // Key Insight
        insight [label="Key Insight: Golden datasets use binary pass/fail criteria,\nnot subjective 1-10 scales. Each test case is specific and\ntestable." shape=box fillcolor="#FEF3C7" color="#D97706" style="filled"];
    }
}
